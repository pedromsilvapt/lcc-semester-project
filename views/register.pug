extends layout

block content
	form.w3-center(method="post" action="/register" style="max-width: 400px; margin-right: auto; margin-left: auto")
		if errors
			each error in errors
				div.w3-panel.w3-red
					p #{error}

		if success
			div.w3-panel.w3-green
				h3 Success
				p Your account was successfully created. Wait for an administrator to approve it.
		else
			p
				label Username 
				input.w3-input.w3-border(type="text" placeholder="Type the username..." name="username" value=username autofocus)
			p
				label Password 
				input.w3-input.w3-border(type="password" placeholder="Type in a password..." name="password" value=password)
			p
				label Confirm Password 
				input.w3-input.w3-border(type="password" placeholder="Confirm the new password (if changed)" name="password_confirm" value=password_confirm)
			p
				label Email 
				input.w3-input.w3-border(type="text" placeholder="Type a valid email address..." name="email" value=email)
			p
				input.w3-button.w3-dark-grey(type="submit" value="Register")